<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/cim_user_image"
            android:src="@drawable/seed_logo"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.75" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/tv_user_email"
            android:text="eMail"
            app:layout_constraintLeft_toRightOf="@+id/cim_user_image"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_alignTop="@+id/cim_user_image"
            android:layout_marginTop="13dp"
            android:fontFamily="cursive"
            android:textSize="24sp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/cim_user_image"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/tv_username"
            android:fontFamily="cursive"
            android:textSize="24sp"
            android:layout_below="@+id/tv_user_email"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:layout_toEndOf="@+id/cim_user_image" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cim_user_image"
            android:layout_alignParentEnd="true">

            <Button
                android:text="Accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_accept_invite"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:elevation="5dp" />

            <Button
                android:text="Denial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_accept_denial"
                android:layout_below="@+id/cim_user_image"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:elevation="5dp" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>